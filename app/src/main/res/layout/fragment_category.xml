<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="23dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择运动种类"
            android:textColor="#B5B5B5"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#464948"
            >

            <TableRow>

                <LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_categorySports"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/category_sports" />

                    <ImageButton
                        android:id="@+id/btn_categoryExercise"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/category_exercise" />
                </LinearLayout>

            </TableRow>

            <TableRow>

                <LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_categoryAerobic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/category_aerobic" />

                    <ImageButton
                        android:id="@+id/btn_categoryAnaerobic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/category_anaerobic" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout>

                    <ImageButton
                        android:id="@+id/btn_categoryEntertainment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/category_entertainment" />

                    <ImageButton
                        android:id="@+id/btn_categoryRelax"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/category_relax" />

                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>
</LinearLayout>
